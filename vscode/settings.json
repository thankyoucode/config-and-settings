{
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "search.searchOnType": false,
  // Windows
  "window.menuBarVisibility": "compact",
  "window.newWindowProfile": "Default",
  // Editor
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "editor.lineHeight": 22.652,
  "editor.cursorSurroundingLines": 5,
  "editor.fontFamily": "'JetBrainsMono Nerd Font Mono', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.stickyScroll.enabled": false,
  "editor.cursorBlinking": "solid",
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "breadcrumbs.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always",
    "source.fixAll": "always"
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[html]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  // Files
  "files.autoSave": "onFocusChange",
  "files.defaultLanguage": "markdown",
  "files.trimTrailingWhitespaceInRegexAndStrings": true,
  "files.exclude": {
    ".git": true,
    "**/.git": false
  },
  // Explorer
  "explorer.excludeGitIgnore": true,
  "explorer.autoReveal": true,
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": false,
  // Workbench
  "workbench.colorTheme": "Atom One Dark",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.enablePreview": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.settings.editor": "json",
  "workbench.layoutControl.enabled": false,
  "workbench.startupEditor": "none",
  "workbench.tree.enableStickyScroll": false,
  "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": true,
  "security.workspace.trust.untrustedFiles": "open",
  // Terminal
  "code-runner.runInTerminal": true,
  "terminal.integrated.defaultProfile.windows": "Git Bash",

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.showActionButton": {
    "commit": false,
    "publish": false,
    "sync": false
  },
  // Python language
  "python.analysis.completeFunctionParens": true,
  "python.defaultInterpreterPath": "E:\\Program Files\\Languages\\Python\\Python312",
  "settingsSync.ignoredSettings": ["-python.defaultInterpreterPath"],
  "jupyter.allowUnauthorizedRemoteConnection": true,
  "notebook.formatOnSave.enabled": true,
  // JavaScript language
  "javascript.referencesCodeLens.enabled": true,
  // C/C++ language
  "C_Cpp.dfault.compilerPath": "E:\\Users\\JKL\\AppData\\Local\\Programs\\C_Cpp\\bin\\g++.exe",
  "C_Cpp.formatting": "vcFormat",
  "editor.minimap.enabled": false,
  "codesnap.containerPadding": "0",
  "codesnap.roundedCorners": false,
  "codesnap.showLineNumbers": false,
  "codesnap.showWindowControls": false,
  "codesnap.target": "window",
  "codesnap.transparentBackground": true,
  "codesnap.backgroundColor": ""
}
